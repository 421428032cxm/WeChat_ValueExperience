page{
  font-size: 30rpx;
  background-color: #fff
}
.distance{
  padding: 30rpx 25rpx;
  line-height: 60rpx;
  border-bottom: 20rpx solid #f5f5f5;
}

.process{
  padding: 30rpx 25rpx;
  border-bottom: 1px solid #ddd;
}
.progress-bar{
  padding: 25rpx 30rpx;
}
.static{
  display: flex;
  align-items: center
}
.line-image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.checked{
  display: block;
  width: 100%;
  height: 100%;
}
.uncheck{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.instruction{
  margin-left: 25rpx;
  padding-bottom: 100rpx;
  
  color: #666;
}
.instruction:nth-child(3){
  border-left: none;
}
.instruction text{
  font-size: 26rpx;
  line-height: 45rpx;
  display: block;
  padding-left: 40rpx;
}
.instruction text:nth-child(1){
  padding-top: 15rpx;
}
.success-border{
  border-left: 1px solid #fd4a8b;
}
.fail-border{
  border-left: 1px solid #ddd;
}