/* pages/order/payment/payment.wxss */
.container{
  font-size: 30rpx;
  background-color: #fff;
}
.header-bg{
  width: 100%;
  height: 160rpx;
  background-image: url("http://www.moepan.net/uploads/2017121214423875618351.png");
  background-size: 100% 100%;
  color: #fff;
  line-height: 45rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header-bg text{
  font-weight: bold;
  letter-spacing: 5rpx;
}
.pay-time{
  font-size: 25rpx;
}
/*商品详情样式  */
.intro{
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.intro image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx
}
.intro view{
  display: flex;
  align-items: center;
}
.intro text{
  font-size: 26rpx
}
.details{
  padding: 25rpx;
  display: flex;
  justify-content: space-around
}
.picture{
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #fff;
  border-radius: 5rpx;
   margin-right: 15rpx; 
}
.picture image{
  display: block;
  width: 100%;
  height: 100%;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around ;
}
.line{
  width: 520rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.line:nth-child(1){
  font-size: 32rpx;
}
.line:nth-child(2){
  font-size: 25rpx;
}
.icon{
  color:#fdab4a;
  font-size: 25rpx;
  text-align: left;
  display: flex;
  align-items: center
}
.info .icon icon{
  margin-right: 10rpx;
}
.line-txt view{
   width: 350rpx; 
}
.info-list{
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #ddd;
}
.msg{
  width: 22%;
}
.attribute{
  height: auto;
  padding: 20rpx 30rpx;
  line-height: 50rpx;
}
.reserved{
  padding-left: 30rpx
}
.reserved text{
  margin-right: 10rpx;
}
.reminding{
  margin-bottom: 100rpx;
}
.remind-content{
  padding: 20rpx 30rpx;
  line-height: 50rpx;
}
.remind-content text{
  display: block
}
.tot-up{
  width: 480rpx;
  text-align: right;
  font-size: 35rpx;
}
.pay-now{
  width: 100%;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.pay{
  width: 230rpx;
}
.pay button{
  width: 100%;
  height: 100%;
  line-height: 100rpx;
  color: #fff;
  background-color: #fd4a8b;
  border-radius: 0;
}