page{
  background-color: #fff;
}
.load{
  width: 100rpx;
  height: 100rpx;
  margin: 400rpx auto 0;
}
.load image{
  display: block;
  width: 100%;
  height: 100%;
}
.swiper-tab{
  width: 100%;
  line-height: 88rpx;
  display: flex
}
.swiper-tab-list{
  font-size: 30rpx;
  width: 25%;
  text-align: center;
  border-bottom: 2rpx solid #e5e5e5;
}
.on{
  border-bottom: 5rpx solid #fd4a8b;
}

.intro{
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.intro image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx
}
.intro view{
  display: flex;
  align-items: center;
}
.intro text{
  font-size: 26rpx
}
.wait-pay{
  color: #fdab4a;
}
.wait-use{
  color: #21bdad;
}
.refunding{
  color: #fdab4a;
}
.refunded{
  color: #999999;
}
.using{
  color: #fd4a8b;
}
.details{
  padding: 25rpx;
  border-bottom: 20rpx solid #f5f5f5;
  display: flex;
  justify-content: space-around;
}
.picture{
  width: 160rpx;
  height: 160rpx;
  border-radius: 5rpx;
  margin-right: 15rpx;
}
.picture image{
  display: block;
  width: 100%;
  height: 100%;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around ;
}
.line{
  width: 520rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden
}
.line:nth-child(1){
  font-size: 32rpx;
}
.line:nth-child(2){
  font-size: 25rpx;
  color: #999
}
.icon{
  color:#fdab4a;
  font-size: 25rpx;
  text-align: left;
  display: flex;
  align-items: center
}
.info .icon icon{
  margin-right: 10rpx;
}
.line-txt view{
  width: 400rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.line button{
  height: 55rpx;
  line-height: 55rpx;
  border: 1px solid #fd4a8b;
  border-radius: 55rpx;
  font-size: 25rpx;
  background-color: #fff;
  color: #fd4a8b;
  margin-right: 0
}
.btn1{
  width: 150rpx;
}
.btn2{
  width: 170rpx;
}
.price{
  color: #fd4a8b;
}
.mount{
  color: black;
}
.null{
  margin-top: 300rpx;
  font-size: 35rpx;
  text-align: center;
  color: #CDCDCD;
}
.null image{
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto 30rpx;
}